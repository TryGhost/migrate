{
  "name": "@tryghost/mg-ghost-authors",
  "version": "0.0.2",
  "description": "Fetch existing Ghost users and merge with migrated authors",
  "repository": "https://github.com/TryGhost/migrate/tree/main/packages/mg-ghost-authors",
  "author": "Ghost Foundation",
  "license": "MIT",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "dev": "echo \"Implement me!\"",
    "build:watch": "tsc --watch --preserveWatchOutput --sourceMap",
    "build": "rm -rf build && rm -rf tsconfig.tsbuildinfo && tsc --build --sourceMap",
    "prepare": "yarn build",
    "lint": "eslint src/ --ext .ts --cache",
    "posttest": "yarn lint",
    "test": "rm -rf build && yarn build --force && NODE_OPTIONS=--experimental-vm-modules c8 --src src --all --reporter text --reporter cobertura jest build/test"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "c8": "10.1.3",
    "eslint": "8.57.0",
    "eslint-plugin-ghost": "3.4.4",
    "jest": "30.2.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@tryghost/admin-api": "1.14.4",
    "@tryghost/errors": "1.3.8"
  }
}

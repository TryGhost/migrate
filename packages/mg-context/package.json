    "@types/jest": "29.5.12",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "c8": "10.1.2",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "sinon": "18.0.0",
    "typescript": "5.5.4"
